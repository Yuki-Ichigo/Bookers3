<h2>Book detail</h2>
<p id="notice">
 <%=  notice %>
</p>

<table>
	<tr>
		<td><p><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></p><br><p>USERNAME</p></td>
		<td><%= @book.title %></td>
		<td><%= @book.body %></td>
		<td colspan="" rowspan="" headers=""></td>

		<% if @book.user_id == current_user %>
		  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>

		<td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: {confirm: "本当に消しますか？"} %></td>

        <% end %>


	</tr>
</table>

