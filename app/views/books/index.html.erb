<div class="container">
  <div class="row"> 


    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h3><%= @book.errors.count %>errors</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row">

<div class="col-xs-3">
  <%= render 'users/userinfo', user: @user, book: @book %>
</div>
<div class="col-xs-9">
  <h1>Books</h1>
  <table class="table table-striped">
     <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
     </thead>
     <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
  </div>
</div>
</div>