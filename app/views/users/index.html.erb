<%= render 'users/userinfo', user: @user, book: @book %>

	<!-- 一覧画面 -->
	<div>
		<h2>Users</h2>
			<table>
			   <thead>
			      <th>image</th>
			      <th>name</th>
			      <th></th>
			   </thead>
			   <tbody>
			      <% @users.each do |user| %>
			        <tr>
			          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
			          <td><%= user.name %></td>
			          <td><%= link_to "Show", user_path(user.id) %></td>
			        </tr>
			      <% end %>
			    </tbody>
			</table>
	</div>