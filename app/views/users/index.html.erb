<div class="col-xs-3">
	<%= render 'users/userinfo', user: @user, book: @book %>
</div>

	<!-- 一覧画面 -->
<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table">
	   <thead>
	      <th class="col-xs-3">image</th>
	      <th class="col-xs-4">name</th>
	      <th class="col-xs-2"></th>
	   </thead>
	   <tbody>
	      <% @users.each do |user| %>
	        <tr>
	          <td class="col-xs-2"><%= attachment_image_tag user, :profile_image, :width => '50', :height => '50', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
	          <td class="col-xs-5"><%= user.name %></td>
	          <td class="col-xs-2"><%= link_to "Show", user_path(user.id) %></td>
	        </tr>
	      <% end %>
	    </tbody>
	</table>
</div>