<h2>User info</h2>
  <table>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
    <td>
    <button type="button" class="btn btn-default btn-block" aria-label="Left Align">
        <span class="glyphicon glyphicon-wrench" aria-hidden="true">
        <%= link_to "", edit_user_path(user.id) %></span>
    </button>
    </td>
    </tr>
  </table>


  <!-- 投稿部分 -->
<h2>New book</h2>

<%= form_for(book) do |f| %>

  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Opinion</label><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>