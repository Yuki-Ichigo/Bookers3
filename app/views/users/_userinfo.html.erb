<h1>User info</h1>
  <table>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <td><%= link_to "ボタン", edit_user_path(user.id) %></td>
    </tr>
  </table>


  <!-- 投稿部分 -->
<h1>New book</h1>

<%= form_for(book) do |f| %>

  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Opinion</label><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>