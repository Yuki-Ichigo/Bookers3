<div class="col-xs-3">
<%= render 'users/userinfo', user: @user, book: @book %>
</div>

	<!-- 一覧画面 -->
<div class="col-xs-9">
	<h2>Books</h2>
	<table  class="table">
	   <thead>
	      <th></th>
	      <th>Title</th>
	      <th>Opinion</th>
	   </thead>
	   <tbody>
	      <% @user_books.each do |book| %>
	        <tr>
	          <td><%= attachment_image_tag book.user, :profile_image, :width => '50', :height => '50', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
	          <td><%= book.title %></td>
	          <td><%= book.body %></td>
	        </tr>
	      <% end %>
	    </tbody>
	</table>
</div>

