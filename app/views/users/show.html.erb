<%= render 'users/userinfo', user: @user, book: @book %>

	<!-- 一覧画面 -->
	<div>
		<h2>Books</h2>
			<table>
			   <thead>
			      <th></th>
			      <th>Title</th>
			      <th>Opinion</th>
			   </thead>
			   <tbody>
			      <% @user_books.each do |book| %>
			        <tr>
			          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
			          <td><%= book.title %></td>
			          <td><%= book.body %></td>
			        </tr>
			      <% end %>
			    </tbody>
			</table>
	</div>

</body>