<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- awesome -->
    <script src="https://kit.fontawesome.com/53e26cc2b1.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  


<!-- hedder -->
<body>

<nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <h1 class= "nav navbar-nav navbar-left" ><font size="4" color="white">Bookers</font></h1>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample1">
          <ul class= "nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="col-xs-2">
                <%= link_to "Home", user_path(current_user.id) %></li>
              <li class="col-xs-2"><%= link_to 'Users', users_path %></li>
              <li class="col-xs-2"><%= link_to 'Books', books_path %></li>
              <li class="col-xs-2"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="col-xs-2" ><%= link_to "Home", root_path %></li>
              <li class="col-xs-2"><%= link_to "Sign Up", new_user_registration_path %></li>
              <li class="col-xs-2"><%= link_to 'about', home_about_path %></li>
              <li class="col-xs-2"><%= link_to "Log in", new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
     </div>
  </nav>

<main id="sampleWrapper" class="container">
  <div id="sampleMain">
    <%= yield %>
  </div>
</main>

  <footer class="col-md-4 pull-right">
    <br><br><br>
    <p>CopyRight Infratop.inc</p>
  </footer>
</body>


</html>
